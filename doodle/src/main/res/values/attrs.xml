<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimatedMenu">
        <attr name="useDecoration" format="boolean"/>
        <attr name="useHeader" format="boolean"/>
        <attr name="useFooter" format="boolean"/>
        <attr name="groupTextSize" format="dimension"/>
        <attr name="itemTextSize" format="dimension"/>
        <attr name="groupTextColor" format="color"/>
        <attr name="itemTextColor" format="color"/>
        <attr name="bgColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ShootingStar">
        <attr name="minStarDelay" format="integer"/>
        <attr name="maxStarDelay" format="integer"/>
        <attr name="starCount" format="integer"/>
        <attr name="starColor" format="color"/>
        <attr name="starRotation" format="float"/>
        <attr name="shootingSpeed" format="integer"/>
        <attr name="shootingType" format="enum">
            <enum name="DYNAMIC" value="0"/>
            <enum name="STATIC" value="1"/>
        </attr>
    </declare-styleable>
</resources>